<Window x:Class="Hw1Task2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hw1Task2"
        mc:Ignorable="d"
        Title="Сейф" Height="450" Width="800" >
    <Grid>

        <Grid.ColumnDefinitions>
            <!-- В сетке WPF Width="*" или Height="*" означает пропорциональный размер.-->
            <ColumnDefinition Width="1.5*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBox Name="UserInput" Grid.Column="0"  MinLines="5"  BorderThickness="0"  TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="100"  FontWeight="DemiBold"></TextBox>
        <Grid Grid.Column="1" >
           
            
            <Grid.RowDefinitions>
               <RowDefinition></RowDefinition>
               <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>

            </Grid.ColumnDefinitions>

            <Button  Grid.Row="0" Grid.Column="0"  Margin="5" Padding="5" Background="#D3D3D3" BorderBrush="#A9A9A9" FontSize="40" Click="Button_Click">7</Button>
            <Button Grid.Row="0" Grid.Column="1"  Margin="5" Padding="5"  Background="#D3D3D3" BorderBrush="#A9A9A9" FontSize="40" Click="Button_Click" >9</Button>
            <Button Grid.Row="0" Grid.Column="2"  Margin="5" Padding="5"  Background="#D3D3D3" BorderBrush="#A9A9A9" FontSize="40" Click="Button_Click">9</Button>
            <Button  Grid.Row="1" Grid.Column="0"  Margin="5" Padding="5"  Background="#D3D3D3" BorderBrush="#A9A9A9" FontSize="40" Click="Button_Click">4</Button>
            <Button  Grid.Row="1" Grid.Column="1"  Margin="5" Padding="5"  Background="#D3D3D3" BorderBrush="#A9A9A9" FontSize="40" Click="Button_Click">5</Button>
            <Button  Grid.Row="1" Grid.Column="2"  Margin="5" Padding="5"  Background="#D3D3D3" BorderBrush="#A9A9A9" FontSize="40" Click="Button_Click">6</Button>
            <Button Grid.Row="2" Grid.Column="0"  Margin="5" Padding="5" Background="#D3D3D3" BorderBrush="#A9A9A9" FontSize="40" Click="Button_Click">1</Button>
            <Button  Grid.Row="2" Grid.Column="1" Margin="5" Padding="5"  Background="#D3D3D3" BorderBrush="#A9A9A9" FontSize="40" Click="Button_Click">2</Button>
            <Button  Grid.Row="2" Grid.Column="2"  Margin="5" Padding="5"  Background="#D3D3D3" BorderBrush="#A9A9A9" FontSize="40" Click="Button_Click">3</Button>
            <Button  Grid.Row="3" Grid.Column="0"  Margin="5" Padding="5" Background="#D3D3D3" BorderBrush="#A9A9A9" FontSize="40" Click="Button_Click_C">C</Button>
            <Button Grid.Row="3" Grid.Column="1"   Margin="5" Padding="5"  Background="#D3D3D3" BorderBrush="#A9A9A9" FontSize="40" Click="Button_Click">0</Button>
            <Button Grid.Row="3" Grid.Column="2"  Margin="5" Padding="5"  Background="#D3D3D3" BorderBrush="#A9A9A9" FontSize="40" Click="Button_Click_Ok">Ok</Button>



        </Grid>


    </Grid>
</Window>
