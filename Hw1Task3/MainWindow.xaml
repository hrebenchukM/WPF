<Window x:Class="Hw1Task3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hw1Task3"
        mc:Ignorable="d"
        Title="Определитель" Height="450" Width="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <!-- В сетке WPF Width="*" или Height="*" означает пропорциональный размер.-->
            <ColumnDefinition Width="1.5*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <WrapPanel  Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Button  Grid.Row="0" Grid.Column="0"  Margin="5" Padding="5" Background="#D3D3D3" BorderBrush="#A9A9A9" FontSize="40" Click="Button_Click" >=</Button>

            <TextBox Name= "UserAnswer"  FontSize="40"  FontWeight="DemiBold" Margin="10" Padding="10" TextAlignment="Center" BorderThickness="0"  IsReadOnly="True"  ></TextBox>
        </WrapPanel> 
                <Grid Grid.Column="0" >


            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>

            </Grid.ColumnDefinitions>

            <TextBox Name= "UserInput00"  Grid.Row="0" Grid.Column="0"   FontSize="40"  FontWeight="DemiBold" Margin="5" Padding="5" TextAlignment="Center"></TextBox>
            <TextBox Name= "UserInput01"  Grid.Row="0" Grid.Column="1"   FontSize="40"  FontWeight="DemiBold" Margin="5" Padding="5" TextAlignment="Center"></TextBox>
            <TextBox Name= "UserInput02"  Grid.Row="0" Grid.Column="2"   FontSize="40"  FontWeight="DemiBold" Margin="5" Padding="5" TextAlignment="Center"></TextBox>
            <TextBox Name= "UserInput10"  Grid.Row="1" Grid.Column="0"   FontSize="40"  FontWeight="DemiBold" Margin="5" Padding="5" TextAlignment="Center"></TextBox>
            <TextBox Name= "UserInput11"  Grid.Row="1" Grid.Column="1"   FontSize="40"  FontWeight="DemiBold" Margin="5" Padding="5" TextAlignment="Center"></TextBox>
            <TextBox Name= "UserInput12"  Grid.Row="1" Grid.Column="2"   FontSize="40"  FontWeight="DemiBold" Margin="5" Padding="5" TextAlignment="Center"></TextBox>
            <TextBox Name= "UserInput20"  Grid.Row="2" Grid.Column="0"   FontSize="40"  FontWeight="DemiBold" Margin="5" Padding="5" TextAlignment="Center"></TextBox>
            <TextBox Name= "UserInput21"  Grid.Row="2" Grid.Column="1"   FontSize="40"  FontWeight="DemiBold" Margin="5" Padding="5" TextAlignment="Center"></TextBox>
            <TextBox Name= "UserInput22"  Grid.Row="2" Grid.Column="2"   FontSize="40"  FontWeight="DemiBold" Margin="5" Padding="5" TextAlignment="Center" ></TextBox>



        </Grid>


    </Grid>
</Window>
