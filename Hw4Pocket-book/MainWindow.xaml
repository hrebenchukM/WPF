<Window x:Class="Hw4Pocket_book.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hw4Pocket_book"
        mc:Ignorable="d"
        Title="Записная книжка" Height="450" Width="800" MinHeight="450" MinWidth="500" Background="#F7E3AF">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

       
        <StackPanel Grid.Row="0" Grid.Column="0" Margin="5">
            <TextBlock Text="Список записей" FontWeight="Bold"/>
            <ListBox x:Name="RecordsListBox"  />
        </StackPanel>

    
        <StackPanel Grid.Row="0" Grid.Column="1" Margin="10">
            <TextBlock Text="ФИО:" />
            <TextBox x:Name="NameTextBox"   />

            <TextBlock Text="Адрес:" />
            <TextBox x:Name="AddressTextBox"/>

            <TextBlock Text="Телефон:" />
            <TextBox x:Name="PhoneTextBox" />
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
            <Button Content="Добавить" Width="100" Margin="5" Click="Add_Click"/>
            <Button Content="Изменить" Width="100" Margin="5" Click="Edit_Click"/>
            <Button Content="Удалить" Width="100" Margin="5" Click="Remove_Click"/>
            <Button Content="Сохранить" Width="100" Margin="5" Click="SaveAs_Click"/>
            <Button Content="Открыть" Width="100" Margin="5" Click="Open_Click"/>
        </StackPanel>
    </Grid>
</Window>
