<Window x:Class="Hw4Pocket_bookD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hw4Pocket_bookD"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <local:ProgrammingLanguages x:Key="programminglanguages" LanguageName="C++" LanguageAuthor="Страуструп" LanguageYear="1983" />
    </Window.Resources>
    <ScrollViewer>
        <StackPanel DataContext="{StaticResource programminglanguages}">
            <StackPanel Orientation="Horizontal" Margin="0" VerticalAlignment="Center">
                <TextBox Name="langName" Width="150" Text="{Binding LanguageName}" GotFocus="langName_GotFocus"></TextBox>
                <TextBox Name="langAuthor" Width="150" Text="{Binding LanguageAuthor}" GotFocus="langName_GotFocus"></TextBox>
                <TextBox Name="langYear" Width="150" Text="{Binding LanguageYear}" GotFocus="langName_GotFocus"></TextBox>
                <Button Content="Добавить" Margin="15 0 0 0" Click="Button_Click" />
            </StackPanel>
            <ListBox ItemsSource="{Binding Languages}" SelectedIndex="{Binding  SelectedIndex, Mode=TwoWay}"
               SelectionChanged="listBox1_SelectionChanged" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Bisque" BorderThickness="1" Margin="10">
                            <StackPanel Margin="10">
                                <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Author}" />
                                <TextBlock Text="{Binding Year}" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
            </ListBox>
        </StackPanel>
    </ScrollViewer>
</Window>
