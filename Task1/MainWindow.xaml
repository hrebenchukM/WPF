<Window x:Class="Task1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        
                <Grid.ColumnDefinitions>
            <!-- В сетке WPF Width="*" или Height="*" означает пропорциональный размер.-->
                    <ColumnDefinition Width="2*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
      

            <WrapPanel  Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top" >
                                <Button Margin="10" Padding="10" Foreground="Navy" >Navy</Button>
                                <Button Margin="10" Padding="10"  Foreground="Blue" >Blue</Button>
                                <Button Margin="10" Padding="10" Foreground="Aqua" >Aqua</Button>
                                <Button Margin="10" Padding="10"  Foreground="Teal" >Teal</Button>
                                <Button Margin="10" Padding="10" Foreground="Olive" >Olive</Button>
                                <Button Margin="10" Padding="10"  Foreground="Green" >Green</Button>
                                <Button Margin="10" Padding="10" Foreground="Lime" >Lime</Button>
                                <Button Margin="10" Padding="10"  Foreground="Yellow" >Yellow</Button>
                                <Button Margin="10" Padding="10" Foreground="Orange" >Orange</Button>
                                <Button Margin="10" Padding="10"  Foreground="Red" >Red</Button>
                                <Button Margin="10" Padding="10" Foreground="Maroon" >Maroon</Button>
                                <Button Margin="10" Padding="10"  Foreground="Fuchsia" >Fuchsia</Button>
                                <Button Margin="10" Padding="10"  Foreground="Purple" >Purple</Button>
                                <Button Margin="10" Padding="10" Foreground="Black" >Black</Button>
                                <Button Margin="10" Padding="10"  Foreground="Silver" >Silver</Button>
                                <Button Margin="10" Padding="10" Foreground="Gray" >Gray</Button>
                                <Button Margin="10" Padding="10"  Foreground="White" >White</Button>



                </WrapPanel>


    </Grid>
</Window>
